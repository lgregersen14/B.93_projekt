        @font-face {
  font-family: "display-italic";
  src: url(fonts/B.93-Display-Italic.otf);
}
@font-face {
  font-family: "display";
  src: url(fonts/B.93-Display.otf);
}
@font-face {
  font-family: "body";
  src: url(fonts/B.93-Text.otf);
}
@font-face {
  font-family: "Morion";
  src: url(fonts/Morion-Regular.otf);
}
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

html,
body {
  overflow-x: hidden; /* prevent horizontal scroll */
}


.header-line {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
  justify-items: center;
  margin-bottom: 120px;
  color: #00084b;
  font-size: clamp(1rem, 1vw, 16px);
  font-family: "display-italic";
}

.header-line h1 {
  margin: 0;
  font-weight: normal;
  white-space: nowrap;
}

/* Center word bold */
.header-line .center1 {
  font-weight: bold;
  position: relative;
}

/* Left and right pushed exactly 60px from center */
.header-line .left1 {
  justify-self: end;
  margin-right: 60px;
}

.header-line .right1 {
  justify-self: start;
  margin-left: 60px;
}

.row-container {
  display: flex;
  width: 100%;
  box-sizing: border-box;
}

.left {
  width: 50%;
  padding: 1rem;
  display: flex;
  align-items: flex-start;
  position: relative;
  overflow: hidden;
}

.left h1 {
  font-size: clamp(1.5rem, 3vw, 2rem);
  opacity: 0;
  position: relative;
  animation: fadeInText 0.8s ease forwards;
  animation-delay: 0.8s;
  font-family: "Morion";
  color: #00084b;
}

.left .mask {
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: white;
  animation: maskReveal 0.8s ease forwards;
}

.middle {
  width: 30%;
  padding: 1rem;
  display: flex;
  align-items: flex-start;
  opacity: 0;
  animation: fadeIn 0.4s ease forwards;
  animation-delay: 1.2s;
}

.middle p {
  font-size: clamp(1rem, 2vw, 1rem);
  font-family: "body";
  color: #00084b;
  line-height: 1.4;
}

.right {
  width: 20%;
  padding: 1rem;
  display: flex;
  align-items: flex-start;
  opacity: 0;
  animation: fadeIn 0.4s ease forwards;
  animation-delay: 1.4s;
}

.svg-button {
  background: none;
  border: none;
  cursor: pointer;
  padding: 0 1rem;
  transition: transform 0.2s ease;
}

.svg-button:hover {
  transform: scale(1.1);
}

/* Animations */
@keyframes maskReveal {
  from {
    height: 100%;
  }
  to {
    height: 0;
  }
}

@keyframes fadeInText {
  from {
    opacity: 0;
    transform: translateY(10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}
