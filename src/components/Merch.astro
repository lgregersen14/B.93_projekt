}

body {
  font-family: "morion", sans-serif;
  overflow-x: hidden;
  scrollbar-width: none;
}
@font-face {
  font-family: "morion";
  src: url(fonts/Morion-Regular.otf);
}

body::-webkit-scrollbar {
  display: none;
}

.video-wrapper {
  position: relative;
  height: 120vw;
  width: 100%;
  margin: 0 30px;
  padding-bottom: 20vw;
  padding-top: 20vw;
  background: white;
  overflow: visible;
  box-sizing: border-box; /* ensures padding/margin are included */
  
}


/* Video styles */
.video-wrapper video {
  position: absolute;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  object-fit: cover; /* Fix: no quotes around cover */
  width: 97%;
  height: 100%;
}

/* Overlay text */
.overlay-text {
  position: sticky; /* sticky positioning */
  top: 25vw; /* start sticking at 25vw from top */
  font-size: clamp(2rem, 5vw, 6rem);
  font-family: "morion", sans-serif;
  color: white;
  padding: 1rem 2rem;
  cursor: pointer;
  z-index: 10;
}

/* Images below */
.image-row {
  display: flex;
  margin: 30px 30px;
  gap: 30px;
}

.image-row img {
  width: calc((100% - 30px) / 2);
  aspect-ratio: 1 / 1;
  object-fit: cover;
}</style>